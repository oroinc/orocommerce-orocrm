{% block _page_title_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' page-title--centered'
    }) %}

    {{- parent_block_widget(block) -}}
{% endblock %}

{% block _contact_us_required_wrapper_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' contact-us-required',
        'aria-hidden': 'true'
    }) %}

    <div {{ block('block_attributes') }}>
        {{- block_widget(block) -}}
    </div>
{% endblock %}
